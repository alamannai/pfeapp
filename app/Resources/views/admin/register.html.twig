{% extends 'admin/admin.html.twig' %}



{% block body %}


   <form action="{{ path('add') }}" method="POST">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">Registrer une commune</div>
      <div class="card-body">

          <div class="form-group">
        
              <div class="col-md-6">
                <label for="nom">Nom</label>
                <input class="form-control" name="nom" type="text"  placeholder="Entrer Nom">
              </div>
              <div class="col-md-6">
                <div class="form-group">
                                                <label>Gouvernorat</label>
                                                <select class="form-control">
                                                  <option  >Choisir gouvernorat</option>
                                                    {% for gouvernorat in gouvernorats %}
                                                  <option name="gouvernorat" >{{gouvernorat.nom}}</option>
                                                  {% endfor %} 
                                                </select>
                                            </div>
              </div>
            
          </div>
          <div class="form-group">
            <div class="col-md-12">
            <label for="pseudo">Pseudo</label>
            <input class="form-control" name="pseudo" type="text"  placeholder="Entrer Pseudo">
          </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="password">Password</label>
                <input class="form-control" name="password" type="password" placeholder="Password">
              </div>
              <div class="col-md-6">
                <label for="exampleConfirmPassword">Confirm password</label>
                <input class="form-control" name="pass" type="password" placeholder="Confirm password">
              </div>
            </div>
          </div><br>
         

       
      </div>
    </div>
  </div>



          <button class="btn btn-primary btn-fill   " type="submit" >Register</button>
     
                                              </form>
{% endblock %}