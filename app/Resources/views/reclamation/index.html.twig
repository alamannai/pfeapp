{% extends 'base.html.twig' %}

{% block body %}
    
     <div class="col-lg-12">
          <!-- Example Notifications Card-->
          <div class="card mb-3">
            <div class="card-header">
               Liste des réclamations </div>
                {% set i = 0 %}
          {% for reclamation in reclamations %}
            {% if reclamation.commune == app.user %}
               {% set i = i + 1 %}
              <a class="list-group-item list-group-item-action" href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">
                <div class="media">
                  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/45x45" alt="">
                  <div class="media-body">
                    <strong>Description :</strong>
                    <p>{{ reclamation.contenu }}</p> 
                    <div class="text-muted smaller">Etat : {% if reclamation.closed == true %} fermé{% else %} encours {% endif %}</div>
                    <div class="text-muted smaller">Date dépot : {% if reclamation.createdAt %}{{ reclamation.createdAt|date('Y-m-d') }}{% endif %}</div>
                  </div>
                </div>
              </a>
            {% endif %} 
              
         {% endfor %}
          {% if i == 0 %}
            <div class="list-group-item list-group-item-action" href="#">
            <div class="media-body">

                    <p>Aucune Réclamation.</p> 

                  </div>
                     </div>
          {% endif %}
         
          </div>
        </div>
        <!--Pagination-->
<nav aria-label="pagination example">
    <ul class="pagination pg-blue">

        <!--Arrow left-->
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        <li class="page-item active">
            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>
{% endblock %}
