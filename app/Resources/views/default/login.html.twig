{% extends 'base.html.twig' %}

{% block body %}

		<div class="row">
			<div class="col-3"></div>
			<div class="col-3"></div>
			<div class="col-4">
				<form class="form-horizontal" role="form" method="POST" action="{{ path('security_login_check') }}">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData) }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="pseudo" class="col-md-4 control-label">Pseudo</label>

                            <div class="col-md-6">
                                <input id="pseudo" type="pseudo" class="form-control" name="_pseudo" >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">Password</label>

                            <div class="col-md-6">
                                <input id="password" type="password" class="form-control" name="_password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-sign-in"></i> Login
                                </button>
                            </div>
                        </div>
                    </form>
			</div>
		</div>
    
{% endblock %}
