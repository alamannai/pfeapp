{% extends 'base.html.twig' %}

{% block body %}




 <div class="col-lg-12">
          <!-- Example Notifications Card-->
          <div class="card mb-3">
            <div class="card-header">
               Liste des projets </div>
                {% set i = 0 %}
          {% for projet in projets %}
                {% set i = i + 1 %}
              <a class="list-group-item list-group-item-action" href="{{ path('projet_show', { 'id': projet.id }) }}">
                <div class="media">
                  <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/45x45" alt="">
                  <div class="media-body">
                    <strong>Sujet :</strong> {{ projet.sujet }}
                    <div class="text-muted smaller">Date Début : {% if projet.dateDebut %}{{ projet.dateDebut|date('Y-m-d') }}{% endif %}</div>
                    <div class="text-muted smaller">Durée : {{ projet.duree }}</div>
                  </div>
                </div>
              </a>
         {% endfor %}
         {% if i == 0 %}
            <div class="list-group-item list-group-item-action" href="#">
            <div class="media-body">

                    <p>Aucun Projet.</p> 

                  </div>
                     </div>
          {% endif %}
            <div class="card-footer small text-muted"><a href="{{ path('projet_new') }}" class="btn btn-info btn-fill pull-right">Nouveau projet</a></div>
          </div>
        </div>
        <!--Pagination-->
<nav aria-label="pagination example">
    <ul class="pagination pg-blue">

        <!--Arrow left-->
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        <li class="page-item active">
            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">4</a></li>
        <li class="page-item"><a class="page-link" href="#">5</a></li>
        
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>
   
{% endblock %}
