{% extends 'default/dashboard.html.twig' %}

{% block body %}

<a href="{{ path('projet_index') }}" class="btn btn-default">Retourner à la liste</a> 
<div></div>
<br>

    <div class="row">


        <div class="col-sm-3">
          <div class="well">
            <h3>Projet :</h3>
            <p>{{projet.sujet}}</p> 
      
                <div type="button"  class="btn btn-danger" data-toggle="modal" data-target="#Delete">Supprimer</div>
            

            <div id="Delete" class="modal fade" role="dialog">
              <div class="modal-dialog modal-sm">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                  </div>
                  <div class="modal-body">
                    <p>Etes-vous sûr de</p>
                  </div>
                  <div class="modal-footer">
                    {{ form_start(delete_form) }}
                         <input type="submit" value="Supprimer" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                    
                  </div>
                </div>
          </div>
        </div>

        </div>
    </div>

        <div class="col-sm-3">
          <div class="well">
            <h3>Date debut :</h3>
            <p>{{projet.dateDebut | date('Y-m-d') }}</p> 
            <h3>Durée :</h3>
            <p>{{projet.duree}}</p> 
          </div>
        </div>

        <div class="col-sm-3">
          <div class="well">
            <h3>Etat : <small>{% if projet.done == null %}<p>En cours</p> {% else %} <p>{{projet.done}}</p>{% endif %}</small></h3>
            
            <div class="btn-group">
              <button type="button" class="btn btn-primary">Terminé</button>
              <button type="button" class="btn btn-danger">Interrompu</button>
            </div>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="well">
            <h3>Votes :</h3>
             <div type="button" class="badge" data-toggle="modal" data-target="#myModal">{{votes}}</div>

             <div id="myModal" class="modal fade" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Liste de votes</h2>
                  </div>
                  <div class="modal-body">
                <div class="table-responsive">
                <table  class="table">
                      <tr >
                            <th >Nom</th>
                            <th >Prenom</th>
                        </tr>
                    {% for vote in npvotes %}
                         <tr >
                    <td>{{vote.citoyen.nom}}</td>
                    <td>{{vote.citoyen.prenom}}</td>
                </tr>
                    {% endfor %}
                </table>
            </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>

          </div>
        </div>
     
    </div>
    <div class="row">
        <div class="col-sm-8" >
          <div class="well" >
            <h3>Contenu :</h3>
            <p >{{projet.contenu}}</p> 
          </div>
        </div>

        <div class="col-sm-4">
          <div class="well">
            <h3>Image :</h3>
           
            <div type="button" class="img-responsive"  data-toggle="modal" data-target="#Modal"><img src="http://localhost/pfeapp/web/uploads/imageProjet/{{projet.image}}" class="img-responsive" alt="Cinque Terre" width="300" height="200"></div>

             <div id="Modal" class="modal fade" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Image</h4>
                  </div>
                  <div class="modal-body">
                    <img src="http://localhost/pfeapp/web/uploads/imageProjet/{{projet.image}}" class="img-responsive" alt="Cinque Terre" width="300" height="200">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>
            
    </div>
</div>
</div>
      
<br>

    <div class="row">

        <div class="col-sm-12">
          <div class="well">
            <div class="table-responsive">
            <table  class="table table-hover">

            <h3>Commentaires :</h3>
            {% for commentaire in commentaires %}

                <tr class="alert alert-info">
                    <td>{{commentaire.citoyen}}</td>
                    <td>{{commentaire.contenu}}</td>
                     <td> {% if commentaire.validation %}<div class="btn btn-default disabled ">Déja Valider</div>{% else %} <div class="btn btn-default ">Valider</div>{% endif %} </td>
                     <td><div class="btn btn-danger ">X</div></td>   
                </tr>
                
        {% endfor %}
          </table>
      </div>
          </div>
        </div>

      </div>
         <div class="card-columns">
            <!-- Example Social Card-->
            <div class="card mb-3">
              <a href="#">
                <img class="card-img-top img-fluid w-100" src="http://localhost/pfeapp/web/uploads/imageProjet/{{projet.image}}" alt="">
              </a>
              <div class="card-body">
                <h6 class="card-title mb-1"><a href="#">David Miller</a></h6>
                <p class="card-text small">These waves are looking pretty good today!
                  <a href="#">#surfsup</a>
                </p>
              </div>
              <hr class="my-0">
              <div class="card-body py-2 small">
                <a class="mr-3 d-inline-block" href="#">
                  <i class="fa fa-fw fa-thumbs-up"></i>Like</a>
                <a class="mr-3 d-inline-block" href="#">
                  <i class="fa fa-fw fa-comment"></i>Comment</a>
                <a class="d-inline-block" href="#">
                  <i class="fa fa-fw fa-share"></i>Share</a>
              </div>
              <hr class="my-0">
              <div class="card-body small bg-faded">
                <div class="media">
                  <img class="d-flex mr-3" src="http://placehold.it/45x45" alt="">
                  <div class="media-body">
                    <h6 class="mt-0 mb-1"><a href="#">John Smith</a></h6>Very nice! I wish I was there! That looks amazing!
                    <ul class="list-inline mb-0">
                      <li class="list-inline-item">
                        <a href="#">Like</a>
                      </li>
                      <li class="list-inline-item">·</li>
                      <li class="list-inline-item">
                        <a href="#">Reply</a>
                      </li>
                    </ul>
                    <div class="media mt-3">
                      <a class="d-flex pr-3" href="#">
                        <img src="http://placehold.it/45x45" alt="">
                      </a>
                      <div class="media-body">
                        <h6 class="mt-0 mb-1"><a href="#">David Miller</a></h6>Next time for sure!
                        <ul class="list-inline mb-0">
                          <li class="list-inline-item">
                            <a href="#">Like</a>
                          </li>
                          <li class="list-inline-item">·</li>
                          <li class="list-inline-item">
                            <a href="#">Reply</a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer small text-muted">Posted 32 mins ago</div>
            </div>
    
{% endblock %}
